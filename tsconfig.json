{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "_version": "18.2.0",
  "include": ["src/**/*"],

  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2023", "DOM"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "declaration": true
  }
}